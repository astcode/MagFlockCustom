{
    "name": "magflock/moboce",
    "description": "MagMoboCE - MagFlock Motherboard Control Plane",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "MoBo\\": "mobo/",
            "Components\\": "components/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php scripts/post-install.php"
        ],
        "post-update-cmd": [
            "@php scripts/post-install.php"
        ],
        "kernel-smoke": "php bin/kernel-smoke.php",
        "kernel-smoke-magds": "php bin/kernel-smoke-magds.php"
    }
}

